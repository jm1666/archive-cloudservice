<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Listing Categories</h3>
  </div>
 <div class="table-responsive"> <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th colspan="3" class="hidden-xs"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td class="hidden-xs"><%= link_to 'Show', category %></td>
          <td class="hidden-xs"><%= link_to 'Edit', edit_category_path(category) %></td>
          <td class="hidden-xs"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table></div>
</div>

<div class="btn-group">
  <%= link_to 'New Category', new_category_path, :class => "btn btn-sm btn-default", :role => "button" %>
  <%= link_to 'All Posts', posts_path, :class => "btn btn-sm btn-default", :role => "button" %>

</div>
