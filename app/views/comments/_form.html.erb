<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :content, 'Your Comment' %><br>
    <%= f.text_field :content, :class => "form-control"  %>
  </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group">
    <%= f.submit :class => "btn btn-xs btn-default" %>
  </div>
<% end %>
